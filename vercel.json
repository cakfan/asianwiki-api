{
    "version": 2,
    "builds": [
        {
            "src": "./index.js",
            "use": "@vercel/node"
        },
        {
            "src": "./routes/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "./public/**",
            "use": "@vercel/static"
        },
        {
            "src": "./*.md",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ],
    "functions": {
        "yourFunctionName": {
            "maxDuration": 30
        }
    }
}